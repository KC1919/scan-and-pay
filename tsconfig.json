{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "rootDir": "./src",
        "outDir": "dist",
        "module": "NodeNext",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "src/types/express-serve-static-core/*"]
}
